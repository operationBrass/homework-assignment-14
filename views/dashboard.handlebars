
{{#if noRecords}}
 <article class="message block is-warning">
      <div class="message-header">
        <p>You have no posts! Use the create a post menu option Dashboard -> New Post</p>
        </div>
 </article>
{{else}}
  {{#each posts}}
    <article class="message block is-link">
      <div class="message-header">
        <p>{{this.heading}}</p>
         <span class="icon is-right"> 
        <p>{{this.Member.username}} {{format_time this.createdAt}} {{format_date this.createdAt}}</p>
        </span>
        <span class="icon is-right"> 
        <i class="far fa-edit"></i> 
        <i class="far fa-trash-alt"></i>
        </span>
      </div>
      <div class="message-body">
        {{this.content}}
      </div>

    <div class="field">
    <label class="label">Message</label>
    <div class="control">
    <textarea class="textarea is-primary is-hidden" placeholder="Textarea"></textarea>
    </div>
    <input class="button" type="submit" value="Submit input">
    </div>
    </article>
  {{/each}}
{{/if}}