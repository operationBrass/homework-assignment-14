
      <!-- Hero content: will be in the middle -->
<div class="hero-body is-half">
{{#if isDashboard}}

  {{#each posts}}
    <article class="message block is-link">
      <div class="message-header">
        <p>{{this.heading}}</p>
         <span class="icon is-right"> 
        <p>{{this.Member.username}} {{format_time this.createdAt}} {{format_date this.createdAt}}</p>
        </span>
        <span class="icon is-right"> 
        <i class="far fa-edit"></i> 
        <i class="far fa-trash-alt"></i>
        </span>
      </div>
      <div class="message-body">
        {{this.content}}
      </div>
      <div class="field">
  <label class="label">Message</label>
  <div class="control">
    <textarea class="textarea is-primary" placeholder="Textarea"></textarea>
  </div>
  <input class="button" type="submit" value="Submit input">
</div>
    </article>
  {{/each}}

  {{else}}
    {{#each posts}}
      <article class="message block is-link">
       <div class="message-header">
          <p><a href=/members/post/{{this.id}}> {{this.heading}}</a></p>
          <p class="is-right is-small">{{this.Member.username}} {{format_time this.createdAt format_date this.createdAt}}</p>
        </div>
        <div class="message-body">
          {{this.content}}
        </div>
      </article>
  {{/each}} 

{{/if}}

</div>