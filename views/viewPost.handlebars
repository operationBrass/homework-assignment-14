
      <!-- Hero content: will be in the middle -->
<div class="hero-body is-half">

      <article class="message block is-link">
       <div class="message-header">
          <p>{{postToView.heading}}</p>
          <p class="is-right">{{postToView.Member.username}} {{format_time postToView.createdAt}} {{format_date postToView.createdAt}}</p>
        </div>
        <div class="message-body">
          {{postToView.content}}
        </div>
      </article>

    {{#each postToView.Comments}}  <!--traverse the comments attached to the post-->
        <article class="message block is-warning">
        <div class="message-body">
          {{this.content}} ---- {{this.Member.username}} on {{format_time postToView.createdAt}} {{format_date postToView.createdAt}}
        </div>
      </article>
    {{/each}}


</div>